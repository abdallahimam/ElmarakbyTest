
@{
    ViewData["Title"] = "Employers List";
}
@model IEnumerable<EmployerModel>

<div class="container">
    @if (Model == null)
    {
       <div>
          <h2 class="text-center display-4"> No Employers Found.</h2>
          <a class="btn btn-success" asp-action="Create">Add Your First Employer</a>
       </div>
    }
    else
    {
       <h3 class="display-4">All Employers</h3>
       <div class="row">
          <div class="mb-3">
             <a class="btn btn-success" asp-action="Create">Create New</a>
          </div>
          <table class="table">
             <thead>
                <tr>
                   <th scope="col">Id</th>
                   <th scope="col">Name</th>
                   <th scope="col">Title</th>
                   <th scope="col">Salary</th>
                   <th scope="col">Photo</th>
                   <th></th>
                </tr>
             </thead>
             <tbody>
               @foreach(var emp in Model)
               {
                  <tr>
                     <th scope="row">@emp.Id</th>
                     <td>@emp.Name</td>
                     <td>@emp.Title</td>
                     <td>@emp.Salary</td>
                       <td><img src="@emp.ImagePath" width="30" height="30" class="img-thumbnail rounded " alt="Profile Photo"></td>
                     <td>
                        <a class="text-primary link-primary" asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                        <a class="text-secondary link-secondary" asp-action="Details" asp-route-id="@emp.Id">Details</a> |
                        <a class="text-danger link-danger" asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                     </td>
                  </tr>
               }
             </tbody>
          </table>
       </div>
    }

</div>
