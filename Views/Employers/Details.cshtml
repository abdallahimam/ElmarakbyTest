@model EmployerModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
   <div class="row">
      <div class="col-7">
         <img src="@Model.ImagePath" class="img-thumbnail" alt="Profile Photo">
      </div>
      <div class="col-5">
         <h4 class="h1 mb-5">@Model.Name</h4>
         <p class="text-muted">@Model.Title</p>
         <p class="text-muted">@Model.Salary</p>
         <div>
            <a class="text-success" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a class="text-danger" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a> |
            <a class="text-dark" asp-action="Index">Back to List</a>
         </div>
      </div>
   </div>
   
</div>
